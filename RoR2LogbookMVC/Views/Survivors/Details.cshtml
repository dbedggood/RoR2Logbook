@model RoR2LogbookMVC.Models.Survivor

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-light">Survivor Details</h2>

<div>

    <hr />
    <dl class="row text-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
            <div class="survivor itembg">
                <img class="icon" src=@Model.Icon />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Base Max Health
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.BaseMaxHealth)
        </dd>
        <dt class="col-sm-2">
            Max Health Increase Per Level
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.MaxHealthIncrease)
        </dd>
        <dt class="col-sm-2">
            Base Damage
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.BaseDamage)
        </dd>
        <dt class="col-sm-2">
            Damage Increase Per Level
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.DamageIncrease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speed)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.Speed)
        </dd>
        @if (Model.Challenge != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Challenge)
            </dt>
            <dd class="col-sm-10 align-self-center">
                @Html.DisplayFor(model => model.Challenge)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        @if (Model.Notes != null)
        {
            <dd class="col-sm-10">
                <div style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Notes)</div>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <div style="white-space: pre-wrap; color: grey;">Welcome to DataScraper (v3.1.53   beta branch)
$  Scraping memory... error...
$  Resolving... error...
$  Combing for relevant data...
Error!
Outputting error log...
                </div>
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.Identity.Name != null)
    {
        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    <a class="btn btn-outline-info" asp-action="Index">Back</a>
</div>
