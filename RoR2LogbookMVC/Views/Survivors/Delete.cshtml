@model RoR2LogbookMVC.Models.Survivor

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-light">Delete Survivor</h2>
<h3 class="text-light">Are you sure you want to delete this?</h3>

<div>
    <hr />
    <dl class="row text-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
            <div class="survivor itembg">
                <img class="icon" src=@Model.Icon />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BaseMaxHealth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseMaxHealth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxHealthIncrease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxHealthIncrease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BaseDamage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BaseDamage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DamageIncrease)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DamageIncrease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Speed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Speed)
        </dd>
        @if (Model.Challenge != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Challenge)
            </dt>
            <dd class="col-sm-10 align-self-center">
                @Html.DisplayFor(model => model.Challenge)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        @if (Model.Notes != null)
        {
            <dd class="col-sm-10">
                <div style="white-space: pre-wrap;">@Html.DisplayFor(model => model.Notes)</div>
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <div style="white-space: pre-wrap; color: grey;">Welcome to DataScraper (v3.1.53   beta branch)
$  Scraping memory... error...
$  Resolving... error...
$  Combing for relevant data...
Error!
Outputting error log...
                </div>
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a class="btn btn-outline-info" asp-action="Index">Back</a>
    </form>
</div>
