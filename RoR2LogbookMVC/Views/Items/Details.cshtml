@model RoR2LogbookMVC.Models.Item

@{
    ViewData["Title"] = "Details";
    ViewData["tier1"] = "Common Item";
    ViewData["tier2"] = "Uncommon Item";
    ViewData["tier3"] = "Legendary Item";
    ViewData["boss"] = "Boss Item";
    ViewData["lunar"] = "Lunar Item";
    ViewData["equipment"] = "Equipment";
}

<h2 class="text-light">Item Details</h2>

<div>
    <hr />
    <dl class="row text-light">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Icon)
        </dt>
        <dd class="col-sm-10">
            <div class="itembg @Model.Type">
                <img class="icon" src=@Model.Icon />
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @ViewData[Model.Type]
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PickupText)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.PickupText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10 align-self-center">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.Name != null)
    {
        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    <a class="btn btn-outline-info" asp-action="Index">Back</a>
</div>
